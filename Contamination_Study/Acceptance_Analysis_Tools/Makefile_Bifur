ROOT_CONFIG := $(shell root-config --cflags)
ROOT_LIBS := $(shell root-config --libs)
COPARSER := ConfigParser.cc
B14_PROGRAM := B14ITR.cc
B14_OUTPUT := B14ITR 
DC_PROGRAM := DCSacrifice.cc
DC_OUTPUT := DCSacrifice

standard:
	g++ $(ROOT_CONFIG)  lib/$(B14_PROGRAM)  lib/$(COPARSER) -o bin/$(B14_OUTPUT) $(ROOT_LIBS)
	g++ $(ROOT_CONFIG)  lib/$(DC_PROGRAM)  lib/$(COPARSER)  -o bin/$(DC_OUTPUT) $(ROOT_LIBS)
